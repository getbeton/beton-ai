# Database Configuration
DATABASE_URL=postgresql://postgres:postgres123@mock-postgres:5432/mock_apollo
# For development: postgresql://postgres:postgres123@localhost:5433/mock_apollo

# Server Configuration
PORT=3002
NODE_ENV=development

# Logging
LOG_LEVEL=info
# Options: error | warn | info | debug

# Breadcrumb Cache Configuration
# Force refresh of breadcrumb cache on startup (even if cache exists)
FORCE_REFRESH_CACHE=false

# Latency Simulation Configuration
# Option 1: Disable all latency simulation for fastest response
# DISABLE_LATENCY_SIMULATION=true

# Option 2: Use fixed latency for all requests (overrides dynamic calculation)
# FIXED_LATENCY_MS=100

# Option 3: Use dynamic latency calculation (default behavior)
# Base latency range in milliseconds (random between min and max)
BASE_LATENCY_MIN=30
BASE_LATENCY_MAX=60
# Additional latency per record/page
PER_RECORD_LATENCY=0
PER_PAGE_LATENCY=0

# Examples:
# - For no latency: DISABLE_LATENCY_SIMULATION=true
# - For fast testing: FIXED_LATENCY_MS=50
# - For realistic simulation: use the BASE_LATENCY_* values above

# Performance Optimization
# Disable breadcrumbs for faster search (breadcrumb generation can be slow with large datasets)
# DISABLE_BREADCRUMBS=true

# Data Seeding Configuration
SEED_ENTITY_COUNT=100000
# Number of entities to create on first startup

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000 