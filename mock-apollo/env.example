# Database Configuration
DATABASE_URL=postgresql://postgres:postgres123@mock-postgres:5432/mock_apollo
# For development: postgresql://postgres:postgres123@localhost:5433/mock_apollo

# Server Configuration
PORT=3002
NODE_ENV=development

# Logging
LOG_LEVEL=info
# Options: error | warn | info | debug

# Latency Simulation Configuration (stored in database, these are fallback defaults)
# Base latency range in milliseconds
BASE_LATENCY_MIN=200
BASE_LATENCY_MAX=800

# Additional latency per record/page
PER_RECORD_LATENCY=2
PER_PAGE_LATENCY=10

# Data Seeding Configuration
SEED_ENTITY_COUNT=100000
# Number of entities to create on first startup

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000 