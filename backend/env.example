DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/beton_ai
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
JWT_SECRET=your_jwt_secret_key_here
PORT=3001
NODE_ENV=development

# Redis Configuration for Bull Queue
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Bulk Download Configuration
BULK_DOWNLOAD_WARNING_THRESHOLD=1000
MAX_CONCURRENT_JOBS_PER_USER=2
MAX_RETRY_ATTEMPTS=3
APOLLO_API_DELAY_MS=100
PROGRESS_UPDATE_INTERVAL=10

# Bulk Download Performance Optimization
# These settings control how bulk downloads process large datasets for maximum speed

# Apollo API page size (records per API call) - higher = fewer API calls but larger payloads
APOLLO_PAGE_SIZE=100

# Database batch pages (how many API pages to fetch before bulk inserting to DB)
# Higher = fewer DB round trips but more memory usage
DB_BATCH_PAGES=5

# Parallel API calls (how many pages to fetch concurrently)
# Higher = faster API fetching but may hit rate limits
PARALLEL_API_CALLS=3

# Examples for different performance needs:
# For maximum speed (if Apollo allows): APOLLO_PAGE_SIZE=200, DB_BATCH_PAGES=10, PARALLEL_API_CALLS=5, APOLLO_API_DELAY_MS=50
# For conservative/safe processing: APOLLO_PAGE_SIZE=100, DB_BATCH_PAGES=3, PARALLEL_API_CALLS=2, APOLLO_API_DELAY_MS=200

# Apollo Configuration
APOLLO_MODE=mock
# Options: mock | real | mixed
# - mock: All Apollo requests go to mock service
# - real: All Apollo requests go to real Apollo API
# - mixed: Depends on endpoint configuration in apollo.json

# Apollo Endpoint-Specific Overrides (optional)
# These override the global APOLLO_MODE for specific endpoints
# APOLLO_API_V1_AUTH_HEALTH_MODE=real
# APOLLO_API_V1_MIXED_PEOPLE_SEARCH_MODE=mock

# Mock Apollo Service Configuration
MOCK_APOLLO_SERVICE_URL=http://localhost:3002
# Use http://mock-apollo:3002 when running in Docker
MOCK_APOLLO_SERVICE_TIMEOUT=30000 